<UserControl x:Class="EventHub.EventsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Background="#F4F4F4">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="650">

                <TextBlock Text="Upcoming Events" FontSize="28" FontWeight="Bold" Foreground="#222"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <Button Content="âž• Add New Event" Style="{StaticResource ModernButton}" 
                        Click="AddEvent_Click" Margin="20,20,0,20"/>

                <ItemsControl ItemsSource="{Binding Events}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" CornerRadius="12" Padding="15" Margin="0,0,0,15" 
                                    BorderBrush="#DDD" BorderThickness="1" Effect="{DynamicResource ShadowEffect}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="140"/>
                                    </Grid.ColumnDefinitions>

                                    <Image Source="{Binding ImageUrl}" Width="140" Height="100" Stretch="UniformToFill"/>

                                    <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                        <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold" Foreground="#007ACC"/>
                                        <TextBlock Text="{Binding Date}" FontSize="14" Foreground="#666" Margin="0,5,0,0"/>
                                        <TextBlock Text="{Binding Description}" FontSize="14" Foreground="#444" 
                                                   TextWrapping="Wrap" MaxWidth="300"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                                        <Button Content="âœï¸ Edit" Style="{StaticResource ModernButton}" 
                                                Margin="0,0,0,5" Click="EditEvent_Click"/>
                                        <Button Content="ðŸŽŸï¸ Generate Ticket" Style="{StaticResource ModernButton}" 
                                                Click="GenerateTicket_Click"/>
                                        <Button Content="ðŸ—‘ï¸ Delete Event" Style="{StaticResource ModernButton}" 
                                                Click="DeleteEvent_Click"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
